package gui.elements;

/**
 * Shows a warning window.
 * @author rasgarbayli
 * @version 1.0
 */
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.Priority;
import javafx.scene.layout.VBox;
import javafx.stage.Modality;
import javafx.stage.Stage;
import javafx.stage.StageStyle;

public class WarningWindow extends Stage {

	public WarningWindow(String message, Stage owner) {
		
		// Dialog pane
		BorderPane root = new BorderPane();
		root.setMinWidth(300);
		root.setMaxWidth(300);
		root.setMinHeight(200);
		root.setMaxHeight(200);
		
		// Message to show
		Label errorMessage = new Label(message);
		root.setCenter(errorMessage);
		
		// a vbox that centers the clode button
		HBox hBox = new VBox();
		// Button to close the dialog and exit
		Button close = new Button("Close");
		close.setAlignment(Pos.CENTER);
		close.setOnAction(new EventHandler<ActionEvent>() {
			
			@Override
			public void handle(ActionEvent event) {
				WarningWindow.this.close();
			}
		});
		
		hBox.getChildren().add(close);
		//VBox.setVgrow(close, Priority.ALWAYS);
		root.setBottom(hBox);
		
		Scene scene = new Scene(root);
		this.setScene(scene);
		this.setTitle("Error!");
		this.initModality(Modality.WINDOW_MODAL);
	    this.initOwner(owner);
	    this.show();
	}

	public WarningWindow(StageStyle arg0) {
		super(arg0);
		// TODO Auto-generated constructor stub
	}

}
